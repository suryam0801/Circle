<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="circleapp.circlepackage.circle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".Helpers.InAppNotificationHelper"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Explore.ExploreCategoryFilter"></activity>
        <activity android:name=".CircleWall.FullPageImageDisplay" />
        <activity android:name=".CircleWall.FullPageBroadcastCardView" />
        <activity
            android:name=".CreateCircle.CreateCircleCategoryPicker"
            android:label="@string/title_activity_create_circle_category_picker"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />

        <activity android:name=".CircleWall.CreatorPollAnswersView" />
        <activity
            android:name=".Explore.ExploreTabbedActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="worfo.app.link"
                    android:scheme="https" />
                <data
                    android:host="circleapp.circlepackage.circle"
                    android:scheme="app" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="worfo.app.link"
                    android:scheme="http" />
                <data
                    android:host="circleapp.circlepackage.circle"
                    android:scheme="app" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.EntryPage" />
        <activity android:name=".Login.get_started_first_page" />
        <activity android:name=".Login.get_started_second_page" />
        <activity android:name=".Login.get_started_third_page" />
        <activity
            android:name=".CircleWall.BroadcastComments"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".EditProfile.EditProfile" />
        <activity android:name=".PersonelDisplay.PersonelDisplay" />
        <activity android:name=".Login.GatherUserDetails" />
        <activity android:name=".Login.OtpActivity" />
        <activity android:name=".Login.PhoneLogin" />
        <activity android:name=".CircleWall.CircleWall" />
        <activity
            android:name=".MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateCircle.CreateCircle" />
        <activity
            android:name=".Explore.CircleDisplayAdapter"
            tools:ignore="Instantiatable" />

        <service
            android:name=".Helpers.FireBaseInstanceIDService"
            android:directBootAware="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
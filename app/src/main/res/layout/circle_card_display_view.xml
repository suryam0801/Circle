<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/container"
    android:background="@drawable/explore_card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/explore_card_heading_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="S"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/explore_foreground_icon"
            android:layout_marginLeft="20dp">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Name"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="7dp"
                android:layout_marginRight="45dp"
                android:id="@+id/circle_name"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/project_item_divider"
            android:background="#F1F1F1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Description"
            android:textSize="12dp"
            android:maxLines="2"
            android:textColor="#9E9E9E"
            android:fontFamily="@font/roboto_regular"
            android:ellipsize="end"
            android:layout_margin="18dp"
            android:id="@+id/circle_desc"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="19dp"
        android:layout_marginBottom="13dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by "
            android:textSize="12dp"
            android:textColor="#B6B6B6"
            android:fontFamily="@font/roboto_regular"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creator Name"
            android:textSize="12dp"
            android:textColor="#6CACFF"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/circle_creatorName"
            />
    </LinearLayout>

</LinearLayout>
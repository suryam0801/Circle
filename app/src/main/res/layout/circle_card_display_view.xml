<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:gravity="center"
    android:orientation="vertical"
    android:scaleType="fitXY">
    <!--
    android:background="@drawable/popup_card_background"
    -->

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="99"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/circle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="center_vertical"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingLeft="19dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Created by "
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/circle_creatorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Creator Name"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:id="@+id/project_item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/circle_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="18dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_condensed"
                android:lineSpacingExtra="3dp"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/three_memers_prof_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="33dp"
                        android:background="@drawable/avatar1"></de.hdodenhof.circleimageview.CircleImageView>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="18dp"
                        android:background="@drawable/avatar2"></de.hdodenhof.circleimageview.CircleImageView>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:background="@drawable/avatar3"></de.hdodenhof.circleimageview.CircleImageView>

                </RelativeLayout>

                <Button
                    android:id="@+id/members_count_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/join_button_background_explore_card"
                    android:fontFamily="@font/roboto_condensed"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="+358"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14dp"></Button>


            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/explore_circle_created_date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/roboto_condensed"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:text="17 Feb, 2020"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="7dp"
                android:background="@drawable/join_circle_background_outline"
                android:clickable="true"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/circle_card_share"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:foreground="@drawable/ic_share_white_24dp"></ImageButton>


            </LinearLayout>

            <Button
                android:id="@+id/circle_card_join"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="117dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="55dp"
                android:background="@drawable/join_circle_background_outline"
                android:fontFamily="@font/roboto_condensed"
                android:text="Join Circle"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14dp"></Button>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
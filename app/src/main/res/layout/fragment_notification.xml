<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explore.NotificationFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="23dp"
            android:text="This Week"
            android:textColor="#828282"
            android:textSize="14dp">

        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/thisweek_notifications_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:divider="@color/white">

                </ListView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingLeft="23dp"
                    android:id="@+id/prevnotifytext"
                    android:layout_below="@id/thisweek_notifications_display"
                    android:text="Previous"
                    android:textColor="#828282"
                    android:textSize="14dp"></TextView>


                <ListView
                    android:id="@+id/all_time_notifications_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/prevnotifytext"
                    android:divider="@color/white">

                </ListView>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>


</RelativeLayout>
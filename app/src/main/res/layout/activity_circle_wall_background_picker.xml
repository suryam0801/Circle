<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CircleWall.CircleWallBackgroundPicker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bck_wallpaper"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:scaleX=".8"
            android:scaleY=".8"
            android:src="@drawable/ic_chevron_left_black_24dp"></ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="20dp"
            android:paddingRight="70dp"
            android:text="Choose Wallpaper"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#EEEEEE"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="This will your wallpaper for all circles"
        android:textSize="14dp"></TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2.5dp"
                android:layout_weight="50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/circlWallBackground1"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="5dp"></ImageView>

                <ImageView
                    android:id="@+id/circlWallBackground2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="5dp"></ImageView>

                <ImageView
                    android:id="@+id/circlWallBackground3"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="5dp"></ImageView>

                <ImageView
                    android:id="@+id/circlWallBackground4"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="5dp"></ImageView>

                <ImageView
                    android:id="@+id/circlWallBackground5"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="5dp"></ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/circlWallBackground6"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginBottom="5dp"></ImageView>

                <ImageView
                    android:id="@+id/circlWallBackground7"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="5dp"></ImageView>

                <ImageView
                    android:id="@+id/circlWallBackground8"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="5dp"></ImageView>

                <ImageView
                    android:id="@+id/circlWallBackground9"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="5dp"></ImageView>

                <ImageView
                    android:id="@+id/circlWallBackground10"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="5dp"></ImageView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".CreateCircle.CreateCircle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bck_create"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:src="@drawable/ic_chevron_left_black_24dp"></ImageButton>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="70dp"
                    android:text="Create Your Circle"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Category: "
                        android:textColor="#DEDADA"
                        android:textSize="12dp"></TextView>

                    <TextView
                        android:id="@+id/category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Category Name"
                        android:textColor="@color/color_blue"
                        android:textSize="12dp"></TextView>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="18dp"
                    android:text="Circle Logo"
                    android:textColor="@color/grey"></TextView>

                <TextView
                    android:id="@+id/logo_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="5dp"
                    android:text="Adding a logo will help people identify your Circle."
                    android:textColor="#DEDADA"
                    android:visibility="visible"></TextView>

                <RelativeLayout
                    android:id="@+id/backgroundPreview"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="25dp"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/background_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/grey_bg"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/backgroundText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Add Logo"
                        android:visibility="visible"></TextView>

                    <Button
                        android:id="@+id/profilePicSetterImage"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignRight="@+id/background_image"
                        android:layout_alignBottom="@+id/background_image"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/edit_project_button_background"
                        android:foreground="@drawable/ic_add_white_24dp"
                        android:foregroundGravity="center" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Name"
                    android:textColor="#9D9D9D"
                    android:textSize="12dp"></TextView>

                <EditText
                    android:id="@+id/create_circle_Name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#EEEEEE"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Enter circle name here"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black"
                    android:textColorHint="#D1D1D1"
                    android:textSize="16dp"></EditText>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Description (200 characters)"
                    android:textColor="#9D9D9D"
                    android:textSize="12dp"></TextView>

                <EditText
                    android:id="@+id/create_circle_Description"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#EEEEEE"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Enter circle description here"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textColor="@color/black"
                    android:textColorHint="#D1D1D1"
                    android:minLines="1"
                    android:ems="10"
                    android:imeOptions="flagNoExtractUi"
                    android:maxLines="25"
                    android:scrollHorizontally="false"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:gravity="start|top"
                    android:overScrollMode="always"
                    android:textSize="16dp"></EditText>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/circle_visibility_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/visibility_prompt_create_circle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Visibility Prompt"
                android:textColor="#9D9D9D"
                android:textSize="12dp"></TextView>

            <RadioGroup
                android:id="@+id/visibilityRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/visibleToAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="43"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Yes"
                    android:textColor="@color/black"
                    android:theme="@style/MyRadioButtonTwo"></RadioButton>

                <RadioButton
                    android:id="@+id/visibleByOnlyShareLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:fontFamily="@font/roboto_regular"
                    android:text="No"
                    android:textColor="@color/black"
                    android:theme="@style/MyRadioButtonTwo"></RadioButton>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acceptanceDisplayView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="How do you want people to join?"
                android:textColor="#9D9D9D"
                android:textSize="12dp"></TextView>

            <TextView
                android:id="@+id/circle_type_tip_prompt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Anybody can join a public circle. You choose who joins your private circle."
                android:textColor="#806CA6FF"
                android:textSize="12dp"
                android:visibility="gone"></TextView>

            <RadioGroup
                android:id="@+id/acceptanceRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/acceptanceTypeAutomatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Anyone can join"
                    android:textColor="@color/black"
                    android:theme="@style/MyRadioButtonTwo"></RadioButton>

                <RadioButton
                    android:id="@+id/acceptanceTypeReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:fontFamily="@font/roboto_regular"
                    android:text="They have to apply"
                    android:textColor="@color/black"
                    android:theme="@style/MyRadioButtonTwo"></RadioButton>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/create_circle_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/green_border_button"
            android:fontFamily="@font/roboto_regular"
            android:text="Create Circle"
            android:textAllCaps="false"
            android:textColor="#35C80B"
            android:textFontWeight="10"
            android:textSize="15dp"></Button>

    </LinearLayout>

</ScrollView>
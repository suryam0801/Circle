<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_transparent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/qr_code_layout"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/bck_fullpage_image_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:background="@android:color/transparent"
                android:scaleX=".8"
                android:scaleY=".8"
                android:src="@drawable/ic_chevron_left_black_24dp"></ImageButton>

            <TextView
                android:id="@+id/full_page_image_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_condensed"
                android:paddingLeft="20dp"
                android:paddingRight="70dp"
                android:text="Scan QR Code to Join this Circle"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>
        </LinearLayout>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/full_page_photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wbContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D8E9FF"
        android:orientation="horizontal">

        <View
            android:layout_width="7dp"
            android:layout_height="120dp"
            android:background="@drawable/edit_project_button_background"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:weightSum="100">

            <Button
                android:id="@+id/unreadNotifButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="250dp"
                android:text="New notification"
                android:textSize="5dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wbcircleName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="Circle Name"
                        android:textColor="@color/black"
                        android:textSize="14dp"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Created by "
                            android:textColor="@color/grey"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/wbcircle_creatorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Creator Name"
                            android:textColor="@color/color_blue"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/newNotifAlertTV"
                    android:layout_width="50dp"
                    android:visibility="gone"
                    android:layout_height="35dp"
                    android:drawableEnd="@drawable/ic_notifications_none_black_24dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:textColor="@color/black">
                </TextView>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="33dp"
                    android:background="@drawable/person_blonde_head"></de.hdodenhof.circleimageview.CircleImageView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/person_job"></de.hdodenhof.circleimageview.CircleImageView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/person_teacher"></de.hdodenhof.circleimageview.CircleImageView>

                <Button
                    android:id="@+id/wb_members_count_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="75dp"
                    android:background="@drawable/join_button_background_explore_card"
                    android:fontFamily="@font/roboto_condensed"
                    android:text="+5"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14dp"></Button>

                <TextView
                    android:id="@+id/circle_created_date"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/roboto_condensed"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="7dp"
                    android:text="17 Feb, 2020"
                    android:textColor="@color/color_blue"
                    android:textSize="12dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CircleWall.CircleWall">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circle_wall_header"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/bck_Circlewall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_chevron_left_black_24dp"></ImageButton>


            <TextView
                android:id="@+id/circleBannerName"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="21dp"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="20dp"
                android:paddingRight="25dp"
                android:text="Circle Board"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"></TextView>

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/share_with_friend_button"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_menu_black_24dp">
            </ImageButton>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/shareCircle"
                android:background="@drawable/ic_share_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp">
            </ImageButton>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"></View>

        <LinearLayout
            android:id="@+id/projectWall_empty_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="167dp"
                android:layout_height="160dp"
                android:background="@drawable/empty_members_placeholder"></ImageView>

            <TextView
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="5dp"
                android:paddingTop="43dp"
                android:text="There are current no documents in this project. Click the button to upload and share a new document."
                android:textAlignment="center"
                android:textColor="#828282"
                android:textSize="12dp"></TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/circle_wall_header"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/circle_wall_empty_display"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="167dp"
                android:layout_height="160dp"
                android:background="@drawable/undraw_no_broadcasts"></ImageView>

            <TextView
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="5dp"
                android:paddingTop="43dp"
                android:text="There are currently no broadcasts in this Circle. Click on the circle below and be the first to broadcast a message"
                android:textAlignment="center"
                android:textColor="#828282"
                android:textSize="12dp">
            </TextView>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/broadcastViewRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/create_new_broadcast_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#3A8BF3"
        android:clickable="true"
        android:src="@drawable/ic_add_white_24dp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@drawable/create_broadcast_popup_background"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/create_broadcast_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/broadcast_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="99"
                android:fontFamily="@font/roboto_bold"
                android:text="Create New Post"
                android:textColor="#3B3B3B"
                android:textSize="16dp"></TextView>


            <EditText
                android:id="@+id/broadcastTitleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="#D1D1D1"
                android:hint="Enter Title"
                android:textColorHint="@color/black20"
                android:inputType="textCapSentences"
                android:textColor="@color/black"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/broadcastDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Description"
                android:background="@drawable/unpressable_button"
                android:inputType="textCapSentences|textMultiLine"
                android:scrollHorizontally="false"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="start|top"
                android:overScrollMode="always"
                android:padding="20dp"
                android:textColorHint="@color/black20"
                android:textColor="@color/black"
                android:textSize="13dp"></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/create_normal_broadcast_cancel_btn"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/unpressable_button"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#828282"></Button>

            <Button
                android:id="@+id/upload_normal_broadcast_btn"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_border_background"
                android:text="Post"
                android:textAllCaps="false"
                android:textColor="@color/color_blue"></Button>
        </LinearLayout>
    </LinearLayout>
</ScrollView>